    <script>
        const scrollContainer = document.getElementById('scrollContainer');
        const scrollItems = document.querySelectorAll('.scroll-item');
        let scrollIndex = 0;

        function autoScroll() {
            const scrollItemWidth = scrollItems[0].clientWidth + 20; // Including margin-right
            scrollIndex++;
            if (scrollIndex >= scrollItems.length) {
                scrollIndex = 0;
            }
            scrollContainer.scrollTo({
                left: scrollIndex * scrollItemWidth,
                behavior: 'smooth'
            });
        }

        setInterval(autoScroll, 6000); // Adjust the speed by changing the interval


        function changeImage(category) {
            const imageElement = document.getElementById('categoryImage');
            let imagePath = '';
            
            switch (category) {
                case 'saree':
                    imagePath = './images/saree20.4.webp';
                    break;
                case 'kurta':
                    imagePath = './images/chu15.1.webp';
                    break;
                case 'dress':
                    imagePath = './images/dress1.3.webp';
                    break;
                case 'dupatta':
                    imagePath = './images/chu13.4.webp';
                    break;
                default:
                    imagePath = './images/saree20.4.webp';
            }

            imageElement.src = imagePath;
        }
    </script>


